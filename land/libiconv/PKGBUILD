pkgname=libiconv
pkgver=1.16
pkgrel=1
pkgdesc="This library provides an iconv() implementation, for use on systems which don't have one, or whose implementation cannot convert from/to Unicode."
arch=('i786')
url="https://www.gnu.org/software/libiconv/"
source=(
	'https://ftp.gnu.org/pub/gnu/libiconv/libiconv-1.16.tar.gz'
	'libiconv.patch'
)
sha256sums=(
	'e6a1b1b589654277ee790cce3734f07876ac4ccfaecbee8afa0b649cf529cc04'
	'SKIP'
)

prepare() {
	cd $pkgname-$pkgver
	patch -p0 < ../$pkgname.patch
}

build() {
	cd $pkgname-$pkgver
	./configure \
		--host=i786-pc-xelix \
		--prefix=/usr \
		--sysconfdir=/etc

	make
}

package() {
	cd $pkgname-$pkgver
	make DESTDIR=$pkgdir install
}
